import cv2
image = cv2.imread("image_path.jpg")  
gray_image = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY) 
gaussian_blurred_image = cv2.GaussianBlur(image, (3,5), 0) 
median_blurred_image = cv2.medianBlur(image, 7) 
bilateral_filtered_image = cv2.bilateralFilter(image, 10, 80, 79) 
box_filtered_image = cv2.boxFilter(image, -1, (3, 5)) 
cv2.imshow("Original Image", image) 
cv2.imshow("Gaussian Blurred Image", gaussian_blurred_image) 
cv2.imshow("Median Blurred Image", median_blurred_image) 
cv2.imshow("Bilateral Filtered Image", bilateral_filtered_image) 
cv2.imshow("Box Filtered Image", box_filtered_image) 
cv2.waitKey(0)
cv2.destroyAllWindows()

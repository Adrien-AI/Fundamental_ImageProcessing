import cv2
image = cv2.imread("image_path.jpg") 
gray_image = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
kernel = cv2.getStructuringElement(cv2.MORPH_RECT, (5,3))
eroded_image = cv2.erode(gray_image, kernel, iterations=2) 
dilated_image = cv2.dilate(gray_image, kernel, iterations=2) 
opened_image = cv2.morphologyEx(gray_image, cv2.MORPH_OPEN, kernel, iterations=2) 
closed_image = cv2.morphologyEx(gray_image, cv2.MORPH_CLOSE, kernel, iterations=2) 
gradient_image = cv2.morphologyEx(gray_image, cv2.MORPH_GRADIENT, kernel, iterations=2)
tophat_image = cv2.morphologyEx(gray_image, cv2.MORPH_TOPHAT, kernel, iterations=2) 
blackhat_image = cv2.morphologyEx(gray_image, cv2.MORPH_BLACKHAT, kernel, iterations=2) 
cv2.imshow("Original Image", gray_image) 
cv2.imshow("Eroded Image", eroded_image) 
cv2.imshow("Dilated Image", dilated_image) 
cv2.imshow("Opened Image", opened_image) 
cv2.imshow("Closed Image", closed_image) 
cv2.imshow("Gradient Image", gradient_image) 
cv2.imshow("Top Hat Image", tophat_image) 
cv2.imshow("Black Hat Image", blackhat_image) 
cv2.waitKey(0) 
cv2.destroyAllWindows() 
